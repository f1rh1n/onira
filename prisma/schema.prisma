// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

// IMPORTANT: Database Provider Configuration
// ==========================================
// This schema uses PostgreSQL for BOTH development and production.
//
// For LOCAL DEVELOPMENT:
//   - If you have .env.production with PostgreSQL URL, it will use that
//   - Otherwise, you can use a local PostgreSQL instance
//
// For PRODUCTION (Vercel):
//   - Uses Vercel Postgres (automatically configured)
//   - DATABASE_URL is set in Vercel environment variables
//
// After deployment, run: npx prisma db push
// Verify with: node scripts/verify-production.js

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  username      String    @unique
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  profile       Profile?
}

model Profile {
  id            String    @id @default(cuid())
  userId        String    @unique
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  username      String?   @unique // Public username for profile URL
  displayName   String
  bio           String?
  profileType   String    @default("business") // business, personal, etc.
  businessName  String?
  location      String?
  phone         String?
  website       String?
  instagram     String?
  coverImage    String?
  profileImage  String?
  avatar        String?   // Avatar ID for profile picture
  avatarId      String?   // Alternative avatar field
  avatarUrl     String?   // Avatar URL
  customContent String?   // JSON string for flexible content
  isPublished   Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  reviews       Review[]
  posts         Post[]
}

model Review {
  id            String    @id @default(cuid())
  profileId     String
  profile       Profile   @relation(fields: [profileId], references: [id], onDelete: Cascade)
  reviewerName  String    // Anonymous name chosen by reviewer
  reviewerAvatar String?  // Avatar ID chosen by reviewer
  reviewerIp    String?   // IP address for spam prevention (hashed)
  anonymousId   String?   // Anonymous identifier from mobile app
  rating        Int       // 1-5 stars
  comment       String
  isPublished   Boolean   @default(false) // Only profile owner can publish
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([profileId, reviewerIp, createdAt]) // For cooldown check
  @@index([profileId, anonymousId, createdAt]) // For mobile app cooldown check
}

model Post {
  id            String        @id @default(cuid())
  profileId     String
  profile       Profile       @relation(fields: [profileId], references: [id], onDelete: Cascade)
  title         String
  content       String        // Blog post content
  excerpt       String?       // Short description
  coverImage    String?       // Cover image URL or base64
  images        String?       // JSON array of additional images
  category      String?       // Post category
  tags          String?       // JSON array of tags
  isPublished   Boolean       @default(true)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  likes         PostLike[]
  comments      PostComment[]
}

model PostLike {
  id            String    @id @default(cuid())
  postId        String
  post          Post      @relation(fields: [postId], references: [id], onDelete: Cascade)
  anonymousId   String    // Anonymous identifier (stored in browser)
  createdAt     DateTime  @default(now())

  @@unique([postId, anonymousId]) // One like per anonymous user per post
}

model PostComment {
  id            String    @id @default(cuid())
  postId        String
  post          Post      @relation(fields: [postId], references: [id], onDelete: Cascade)
  commenterName String    // Anonymous name chosen by commenter
  commenterAvatar String? // Avatar ID chosen by commenter
  comment       String
  anonymousId   String    // Anonymous identifier for tracking
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model PasswordReset {
  id            String    @id @default(cuid())
  userId        String
  email         String
  otp           String
  expiresAt     DateTime
  verified      Boolean   @default(false)
  createdAt     DateTime  @default(now())

  @@index([email])
  @@index([userId])
}
